@using MVCOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Personel Satış</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adı: @ViewBag.dpers</li>
</ol>
<table class="table table-bordered">
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM FİYAT</th>
        <th>TARİH</th>
        <th>YAZDIR</th>
    </tr>
    @foreach (var dp in Model)
    {
        <tr>
            <td>@dp.Satisid</td>
            <td>@dp.Urun.Urunad</td>
            <td>@dp.Cariler.CariAd - @dp.Cariler.CariSoyad</td>
            <td>@dp.Fiyat</td>
            <td>@dp.Adet</td>
            <td>@dp.ToplamTutar</td>
            <td>@dp.Tarih</td>
            <td><a href="#" class="btn btn-info">Yazdır</a></td>
        </tr>
    }

</table>
